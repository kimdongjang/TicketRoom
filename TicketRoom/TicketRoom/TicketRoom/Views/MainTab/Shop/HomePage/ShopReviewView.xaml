<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:custom="clr-namespace:TicketRoom.Models.Custom"
             x:Class="TicketRoom.Views.MainTab.Shop.ShopReviewView">
    <ContentView.Content>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="100"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <!--#region 0행 쇼핑 정보 그리드 -->
            <custom:CustomButton Grid.Row="0" Text="리뷰 쓰기"  Size="26" HorizontalOptions="Center" VerticalOptions="Center" x:Name="WriteReview_btn"
                    BackgroundColor="LightBlue" TextColor="White" Margin="30" Clicked="WriteReview_btn_Clicked" WidthRequest="200"/>
            <Grid Grid.Row="1" BackgroundColor="White" x:Name="ReviewGrid" Margin="10" RowSpacing="20"/>
            <!--#endregion-->
        </Grid>
    </ContentView.Content>
</ContentView>