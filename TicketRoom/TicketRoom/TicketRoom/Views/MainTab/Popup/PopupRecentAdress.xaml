<?xml version="1.0" encoding="utf-8" ?>
<pages:PopupPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:pages="clr-namespace:Rg.Plugins.Popup.Pages;assembly=Rg.Plugins.Popup"
             xmlns:models="clr-namespace:TicketRoom.Models.Custom"
             x:Class="TicketRoom.Views.MainTab.Popup.PopupRecentAdress">
    <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
        <StackLayout Orientation="Vertical" WidthRequest="300" BackgroundColor="White">
            <models:CustomLabel Margin="20,20,20,10" Text="최근 입력한 주소" Size="18"/>
            <Grid x:Name="RecentAdressGrid" HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" BackgroundColor="White" Margin="5" RowSpacing="0"/>
            <models:CustomButton Margin="20" Text="확인" TextColor="White" x:Name="ConfirmBtn" Clicked="ConfirmBtn_Clicked" Size="14" BackgroundColor="LightBlue"/>
        </StackLayout>
    </StackLayout>
</pages:PopupPage>