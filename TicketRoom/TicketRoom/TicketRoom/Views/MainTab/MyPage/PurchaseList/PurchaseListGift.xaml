<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TicketRoom.Views.MainTab.MyPage.PurchaseList.PurchaseListGift">
    <ContentView.Content>
        
        <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" x:Name="MainScroll">
            <Grid Margin="10" x:Name="RootGird">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <!-- 스크롤뷰 전체 구분선 -->
                <BoxView Grid.Row="0" BackgroundColor="LightGray"/>
                <Grid Grid.Row="0" x:Name="MainGrid" VerticalOptions="FillAndExpand" HorizontalOptions="FillAndExpand" BackgroundColor="White" Margin="3"/>
            </Grid>
        </ScrollView>
    </ContentView.Content>
</ContentView>